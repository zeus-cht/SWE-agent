#!/usr/bin/env python3

"""
Show a high-level overview of an OpenViking resource.

By default, this uses the repository context initialized by `ov_init_repo`.
You can override the root with --uri=<viking_uri>.
"""

import argparse
import os
from pathlib import Path

import openviking as ov  # type: ignore
from registry import registry  # type: ignore


def parse_args() -> argparse.Namespace:
    parser = argparse.ArgumentParser(description="Show overview for an OpenViking resource.")
    parser.add_argument(
        "--uri",
        dest="uri",
        default=None,
        help="Explicit viking:// URI to show overview for. Defaults to the repository root URI stored by ov_init_repo.",
    )
    return parser.parse_args()


def main() -> None:
    args = parse_args()

    data_dir = registry.get("OPENVIKING_DATA_DIR", os.environ.get("OPENVIKING_DATA_DIR", "./ov_data"))
    data_dir_path = Path(data_dir).resolve()
    data_dir_path.mkdir(parents=True, exist_ok=True)

    target_uri = args.uri or registry.get("OPENVIKING_REPO_ROOT_URI")
    if not target_uri:
        print(
            "[openviking] No target URI found. "
            "Please run `ov_init_repo` first or pass an explicit --uri=<viking_uri>."
        )
        raise SystemExit(1)

    client = ov.SyncOpenViking(path=str(data_dir_path))

    try:
        client.initialize()
        print(f"[openviking] Overview for: {target_uri}")

        try:
            overview = client.overview(target_uri)
            print(overview)
        except Exception:  # noqa: BLE001
            print("[openviking] Failed to compute overview; falling back to directory listing.")
            try:
                ls_result = client.ls(target_uri)
                print(ls_result)
            except Exception as e:  # noqa: BLE001
                print(f"[openviking] Error while fetching overview/listing: {e}")
                raise

    except Exception as e:  # noqa: BLE001
        print(f"[openviking] Error while showing overview: {e}")
        raise
    finally:
        try:
            client.close()
        except Exception:  # noqa: BLE001
            pass


if __name__ == "__main__":
    main()

