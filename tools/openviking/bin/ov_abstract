#!/usr/bin/env python3

"""
Show the L0/L1 abstract for an OpenViking resource or sub-path.

By default, this uses the repository context initialized by `ov_init_repo`.
You can override the target with --uri=<viking_uri>.
"""

import argparse
import os
from pathlib import Path

import openviking as ov  # type: ignore
from registry import registry  # type: ignore


def parse_args() -> argparse.Namespace:
    parser = argparse.ArgumentParser(description="Show abstract for an OpenViking resource.")
    parser.add_argument(
        "--uri",
        dest="uri",
        default=None,
        help="Explicit viking:// URI whose abstract should be shown. "
        "Defaults to the repository root URI stored by ov_init_repo.",
    )
    return parser.parse_args()


def main() -> None:
    args = parse_args()

    data_dir = registry.get("OPENVIKING_DATA_DIR", os.environ.get("OPENVIKING_DATA_DIR", "./ov_data"))
    data_dir_path = Path(data_dir).resolve()
    data_dir_path.mkdir(parents=True, exist_ok=True)

    target_uri = args.uri or registry.get("OPENVIKING_REPO_ROOT_URI")
    if not target_uri:
        print(
            "[openviking] No target URI found. "
            "Please run `ov_init_repo` first or pass an explicit --uri=<viking_uri>."
        )
        raise SystemExit(1)

    client = ov.SyncOpenViking(path=str(data_dir_path))

    try:
        client.initialize()
        print(f"[openviking] Abstract for: {target_uri}")
        abstract = client.abstract(target_uri)
        print(abstract)
    except Exception as e:  # noqa: BLE001
        print(f"[openviking] Error while fetching abstract: {e}")
        raise
    finally:
        try:
            client.close()
        except Exception:  # noqa: BLE001
            pass


if __name__ == "__main__":
    main()

